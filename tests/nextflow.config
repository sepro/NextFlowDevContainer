// Test-specific configuration

// Logging configuration for tests
env {
    NXF_LOG_FILE = '../log/nextflow_test.log'
}

// Faster execution for tests
process {
    executor = 'local'
    cpus = 1
    memory = '512 MB'
    time = '5m'
    
    errorStrategy = 'terminate'
}

// Disable reports for faster testing
timeline.enabled = false
report.enabled = false
trace.enabled = false
dag.enabled = false

// Test-specific work directory
workDir = './work_test'

// Clean up test outputs
cleanup = true